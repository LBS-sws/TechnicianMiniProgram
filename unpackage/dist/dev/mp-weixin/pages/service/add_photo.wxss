.uni-file-picker__container {
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin: -5px;
}
.uni-file-picker__container .file-picker__box {
  position: relative;
  width: 33.3%;
  height: 0;
  padding-top: 33.33%;
  box-sizing: border-box;
}
.uni-file-picker__container .file-picker__box .file-picker__box-content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: 5px;
  border: 1px #eee solid;
  border-radius: 5px;
  overflow: hidden;
}
.uni-file-picker__container .file-picker__box .file-picker__box-content {
  border-width: 1px;
  border-style: solid;
  border-color: #eee;
  border-radius: 3px;
}
.uni-file-picker__container .file-picker__box .is-add {
  display: flex;
  align-items: center;
  justify-content: center;
}
.uni-file-picker__container .file-picker__box .is-add .icon-add {
  width: 50px;
  height: 5px;
  background-color: #f1f1f1;
  border-radius: 2px;
}
.uni-file-picker__container .file-picker__box .is-add .rotate {
  position: absolute;
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
}
.file-image {
  width: 100%;
  height: 100%;
}
.icon-del-box {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 3px;
  right: 3px;
  height: 26px;
  width: 26px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}
.icon-del-box .icon-del {
  width: 15px;
  height: 2px;
  background-color: #fff;
  border-radius: 2px;
}
.icon-del-box .rotate {
  position: absolute;
  -webkit-transform: rotate(90deg);
  transform: rotate(90deg);
}
